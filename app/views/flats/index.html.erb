<div class="container">
  <h1>All our Flats</h1>
  <small>All <%= @flats.length %> flats.</small>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @flats.each do |flat| %>
      <div class="col">
        <div class="card h-100">
          <img src=<%= flat.url %> class="card-img-top" alt="...">
          <div class="card-body">
            <h3 class="card-title"><%= flat.name %></h3>
            <p class="card-text"><%= flat.address %></p>
            <div class="description d-flex">
              <div class="n-guests">
                <i class="fas fa-user-friends"></i>
                <%= flat.number_of_guests %>
              </div>
              <div class="price ml-4">
                <i class="fas fa-euro-sign"></i>
                <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to "More info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "text-warning" %>
            <%= link_to "Remove", flat_path(flat), class: "text-danger", method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
